<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#198cd4"
    android:orientation="vertical"
    tools:context="com.example.sarthak.retinaproject.DashboardActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="45dp">
    </android.support.v7.widget.Toolbar>

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/view_flipper"
        />

    <GridLayout
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/cardCheck"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:onClick="cardCheck"
            app:cardCornerRadius="2dp"
            app:cardElevation="12dp"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="150dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="#fff"
                android:layout_height="150dp">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:src="@drawable/eyelens"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:text="Glaucoma Check"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardRecord"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="12dp"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="150dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="#fff"
                android:layout_height="150dp">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:src="@drawable/patient"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:text="Patient Record"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardAnalysis"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="12dp"
            >

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="150dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="#fff"
                android:layout_height="150dp">

                <ImageView
                    android:src="@drawable/graphs"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:text="Analysis"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>
</LinearLayout>
